<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Descriptions</th>
    <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    
    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%=article.description%> </td>
        <td> <%= link_to 'Show', article_path(article.id) %> </td>
        <td> <%= link_to 'Edit ', edit_article_path(article.id) %> </td>
        <td> <%= link_to 'Delete', article_path(article.id), method: :delete %> </td>
      </tr>
    <% end %>
    
  </tbody>
</table>