<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Descriptions</th>
    <th colspan = 3>Actions</th>
    </tr>
  </thead>
  <tbody>
    
    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%=article.description%> </td>
        <td> <%= link_to 'Show', article_path(article.id) %> </td>
        <td> <%= link_to 'Edit ', edit_article_path(article.id) %> </td>
        <td> <%= link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure you want to delete this?"} %> </td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<p>
  <%= link_to 'Create new article', new_article_path%> | <%= link_to 'Home page', root_path %> | <%= link_to 'About page', about_path %>
</p>